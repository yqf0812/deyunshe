/* pages/like/index.wxss */
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.likePage {
    height: 100%;
    display: flex;
    flex-direction: column;
}
.half::before {
    content: '';
    /*CSS伪类用法*/
    position: absolute;
    /*定位背景横线的位置*/
    top: 80%;
    left: 50%;
    background: #09BB1E;
    /*宽和高做出来的背景横线*/
    width: 30rpx;
    height: 2rpx;
    transform: translateX(-15rpx) translateY(-1rpx);
  }
.tip {
    display: flex;
    justify-content: center;
    color: antiquewhite;
}
.main {
    flex: 1;
    display: flex;
    overflow: hidden;
}
.left {
    width: 170rpx;
    height: 100%;
    background-color: rgb(247, 248, 250);
}
.right {
    flex: 1;
    height: 100%;
}
.overflowY {
    overflow-y: auto;
}
.content1 {
    width: 100%;
    height: 100%;
    display: flex;
}
.no-data {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.data {
    width: 100%;
    display: flex;
    padding: 10px;
    flex-direction: column;
}
.checkbox {
    display: flex;
    align-items: center;
}
.chanel {
    display: flex;
    justify-content: space-between;
}
.checkbox {
    display: flex;
    justify-content: space-between;
}
.data video {
    width: 100%;
