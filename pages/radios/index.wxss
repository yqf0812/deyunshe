@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.header {
  height: 300rpx;
  width: 100%;
  position: relative;
}
.bg {
  height: 100%;
  background-size: cover;
  filter: blur(10px);
}
.bg-mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
}
.avatar {
  position: absolute;
  left: 100rpx;
  top:50%;
  margin-top: -100rpx;
}
.txt {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -100rpx;
  height: 200rpx;
  width: 380rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.title {
  font-size: 15px;
  flex: 1;
  height: 0;
  overflow: hidden;
}
.play {
  height: 40rpx;
}
.all-play {
  margin-top: 10rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.playfill {
  font-size: 20px;
}
