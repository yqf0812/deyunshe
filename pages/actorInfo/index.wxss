/* pages/actorInfo/index.wxss */
page {
  height: 100%;
}
.actor-info {
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}
.header-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.int-scorll {
  flex: 1;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.int-box {
  height: 100%;
}
.introduction {
  height: auto;
  padding: 0 20rpx;
  text-indent:2em;
  color: #fff;
  line-height: 50rpx;
}
.image-bg {
  width: 100%;
  height: 400rpx;
}

.image-header {
  margin-top: 50rpx;
}
.text {
  color: #CD7F32;
  font-family: "楷体","楷体_GB2312";
  font-size: 50rpx;
} 
.lace {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  /* opacity:0.9; */
}
