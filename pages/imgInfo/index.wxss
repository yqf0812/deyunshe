/* pages/imgInfo/index.wxss */
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";
.img-info {
  display: flex;
  flex-direction: column;
}
.img-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 100rpx;
}
.img {
  border-radius: 5px;
  margin-top: 20rpx;
}
.info {
  height: 100px;
  padding: 20rpx;
}
.avatar {
  display: flex;
  margin-top: 20rpx;
}
.nick {
  margin-left: 20rpx;
}
.comment {
  width: 100%;
}
.title {
  font-weight: 600;
}
.comment-info {
  margin-bottom: 40rpx;
}
.input-comment1 {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #666;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  justify-content: space-between;
}
.input {
  width: 80%;
  height: 60rpx;
  background-color: #ccc;
  border-radius: 10px;
}