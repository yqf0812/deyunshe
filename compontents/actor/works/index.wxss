/* compontents/actor/works/index.wxss */
.scroll-work {
  width: 100%;
  height: 250rpx;
  color: #fff;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
}
.text {
  margin-left: 20rpx;
} 
.scroll-box {
  flex: 1;
  overflow:hidden;
  display: flex;
  align-items: center;
}
.list {
  height: 180rpx;
  width: 200rpx;
  border-radius: 5px;
  /* border: 1px solid #ccc; */
  margin-left: 20rpx;
  margin-top: 14rpx;
  display: inline-block;
  position: relative;
}
.list:last-child {
  margin-right: 20rpx;
}
.work-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 5px;
  z-index: -1;
  opacity: 0.4;
}
.play-music {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  left: 50%;
  margin-top: -38rpx;
  margin-left: -38rpx;
  top: 50%;
  z-index: 1;
}