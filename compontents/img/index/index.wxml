<view class="image-box">
  <!-- <image src="http://127.0.0.1:3000/images/20201008160211_3ca17.jpg" mode="widthFix"></image> -->
  <view class="item" wx:for="{{imgList}}">
    <image mode="widthFix" src="{{item}}" data-index="{{index}}" data-src="{{item}}" bindtap="previewImg"></image>
    <view class="info">
      <view class="introduction">
        the action of introducing something.
        issues arising from the introduction of new technology
      </view>
      <view class="avatar">
        <view class="cu-avatar round sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big81005.jpg);"></view>
        <view class="nick">海绵宝宝</view>
      </view>
      <view class="opt">
        <text class="cuIcon-attentionfill margin-lr-xs"></text> 10
        <text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
        <text class="cuIcon-messagefill margin-lr-xs" bindtap="goComment"></text> 30
      </view>
    </view>
  </view>
</view>
