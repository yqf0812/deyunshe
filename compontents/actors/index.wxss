/* compontents/actors/index.wxss */
.actors {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.actor-img-box {
    width: 65%;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}
.actors .actor-img {
    width: 40%;
    margin-top: 20rpx;
}
.branch {
    width: 100%;
}
.top {
    padding: 40rpx 40rpx 0 40rpx;
    display: flex;
    justify-content: space-between;
}
.branch image {
    width: 100rpx;
    height: 100rpx;
}